<assembly>
	<id>src</id>
	<!-- Generates a zip package containing the needed files -->
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>src/**</include>
				<include>license/**</include>
				<include>README.txt</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.basedir}/pom-without-assembly.xml</source>
			<outputDirectory>/</outputDirectory>
			<destName>pom.xml</destName>
		</file>
	</files>
	<repositories>
		<repository>
			<outputDirectory>maven2</outputDirectory>
			<includes>
				<include>com.thalesgroup.ktd.scis:atom-model</include>
				<include>com.thalesgroup.authzforce:authzforce-core-model</include>
			</includes>
		</repository>
	</repositories>
</assembly>