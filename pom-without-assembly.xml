<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>authzforce-parent</artifactId>
		<groupId>com.thalesgroup.authzforce</groupId>
		<version>3.0.2</version>
	</parent>
	<artifactId>authzforce-rest-api-model</artifactId>
	<version>4.1.2</version>
	<name>AuthzForce REST API model</name>
	<organization>
		<name>Thales Services SAS</name>
	</organization>
	<inceptionYear>2012</inceptionYear>
	<dependencies>
		<dependency>
			<groupId>javax.ws.rs</groupId>
			<artifactId>javax.ws.rs-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thalesgroup.ktd.scis</groupId>
			<artifactId>atom-model</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>com.thalesgroup.ktd.scis</groupId>
			<artifactId>oasis-xacml-model</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thalesgroup.authzforce</groupId>
			<artifactId>authzforce-core-model</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>jcl-over-slf4j</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxrs</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<!-- Replace variable 'version' in WADL file -->
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>authz-api.wadl</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>authz-api.wadl</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>com.mycila</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<configuration>
					<properties>
						<!-- Values to be substituted in template -->
						<inceptionYear>${project.inceptionYear}</inceptionYear>
						<currentYear>${currentYear}</currentYear>
						<copyrightOwner>${project.organization.name}</copyrightOwner>
						<projectName>AuthZForce</projectName>
					</properties>
					<!-- <header>com/mycila/maven/plugin/license/templates/GPL-3.txt</header> -->
					<header>license/thales-gpl.txt</header>
					<strictCheck>true</strictCheck>
					<includes>
						<include>src/**</include>
					</includes>
					<excludes>
						<exclude>src/main/resources/wadl.xsl</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<id>check-license</id>
						<goals>
							<!-- attached to verify phase -->
							<goal>check</goal>
						</goals>
					</execution>
					<execution>
						<id>add-license-headers</id>
						<phase>process-sources</phase>
						<goals>
							<goal>format</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<debug>true</debug>
					<verbose>true</verbose>
					<extension>true</extension>
					<!-- <args> -->
					<!-- <arg>-Xequals</arg> -->
					<!-- <arg>-XhashCode</arg> -->
					<!-- </args> -->
					<episodes>
						<episode>
							<groupId>com.thalesgroup.ktd.scis</groupId>
							<artifactId>atom-model</artifactId>
						</episode>
						<episode>
							<groupId>com.thalesgroup.ktd.scis</groupId>
							<artifactId>oasis-xacml-model</artifactId>
						</episode>
						<episode>
							<groupId>com.thalesgroup.authzforce</groupId>
							<artifactId>authzforce-core-model</artifactId>
						</episode>
					</episodes>
					<plugins>
						<plugin>
							<groupId>org.jvnet.jaxb2_commons</groupId>
							<artifactId>jaxb2-basics</artifactId>
							<version>0.6.4</version>
						</plugin>
						<plugin>
							<groupId>com.thalesgroup.ktd.scis</groupId>
							<artifactId>atom-model</artifactId>
						</plugin>
						<plugin>
							<groupId>com.thalesgroup.ktd.scis</groupId>
							<artifactId>oasis-xacml-model</artifactId>
						</plugin>
						<plugin>
							<groupId>com.thalesgroup.authzforce</groupId>
							<artifactId>authzforce-core-model</artifactId>
						</plugin>
					</plugins>
					<bindingDirectory>src/main/jaxb</bindingDirectory>
					<bindingIncludes>
						<include>bindings.xjb</include>
					</bindingIncludes>
					<catalog>src/main/jaxb/catalog.xml</catalog>
					<catalogResolver>org.jvnet.jaxb2.maven2.resolver.tools.ClasspathCatalogResolver</catalogResolver>
					<schemaDirectory>src/main/jaxb</schemaDirectory>
					<schemaIncludes>
						<!-- <include>authz-api.xsd</include> -->
						<!-- Necessary wrapper schema for maven-jaxb2-plugin to work -->
						<include>authz-api-jaxb-wrapper.xsd</include>
					</schemaIncludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-wadl2java-plugin</artifactId>
				<!-- xjc extra args should be now supported in 2.7.4: https://issues.apache.org/jira/browse/CXF-4791 -->
				<version>${cxf.version}</version>
				<!-- <dependencies> -->
				<!-- <dependency> -->
				<!-- <groupId>org.jvnet.jaxb2_commons</groupId> -->
				<!-- <artifactId>jaxb2-basics</artifactId> -->
				<!-- <version>${jaxb2-basics.version}</version> -->
				<!-- </dependency> -->
				<!-- </dependencies> -->
				<executions>
					<execution>
						<id>generate-sources</id>
						<phase>generate-sources</phase>
						<configuration>
							<wadlOptions>
								<wadlOption>
									<wadl>${basedir}/src/main/resources/authz-api.wadl</wadl>
									<packagename>com.thalesgroup.authzforce.api.jaxrs</packagename>
									<extraargs>
										<extraarg>-catalog</extraarg>
										<extraarg>${basedir}/src/main/jaxb/catalog.xml</extraarg>
										<extraarg>-verbose</extraarg>
										<extraarg>-noTypes</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{http://thalesgroup.com/authz/model/3.0/resource}properties=com.thalesgroup.authz.model._3_0.resource.Properties</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{http://thalesgroup.com/authz/model/3.0/resource}resources=com.thalesgroup.authz.model._3_0.resource.Resources</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{http://thalesgroup.com/authz/model/3.0}domain=com.thalesgroup.authz.model._3_0.resource.Domain</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{http://www.w3.org/2005/Atom}link=org.w3._2005.atom.Link</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{urn:oasis:names:tc:xacml:3.0:core:schema:wd-17}PolicySet=oasis.names.tc.xacml._3_0.core.schema.wd_17.PolicySet</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{urn:oasis:names:tc:xacml:3.0:core:schema:wd-17}Target=oasis.names.tc.xacml._3_0.core.schema.wd_17.Target</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{urn:oasis:names:tc:xacml:3.0:core:schema:wd-17}Request=oasis.names.tc.xacml._3_0.core.schema.wd_17.Request</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{urn:oasis:names:tc:xacml:3.0:core:schema:wd-17}Response=oasis.names.tc.xacml._3_0.core.schema.wd_17.Response</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{http://thalesgroup.com/authz/model/3.0}policySets=com.thalesgroup.authz.model._3.PolicySets</extraarg>
										<extraarg>-tMap</extraarg>
										<extraarg>{http://thalesgroup.com/authz/model/3.0}attributeFinders=com.thalesgroup.authz.model._3.AttributeFinders</extraarg>
										<!-- <extraarg>-catalog</extraarg> -->
										<!-- <extraarg>file:/${basedir}/src/main/resources/catalog.xml</extraarg> -->
										<!-- <extraarg>-b</extraarg> -->
										<!-- <extraarg>file:/${basedir}/src/main/resources/authzforce.xjb</extraarg> -->
										<!-- <extraarg>-xjc-XhashCode</extraarg> -->
										<!-- <extraarg>-xjc-Xequals</extraarg> -->
									</extraargs>
								</wadlOption>
							</wadlOptions>
						</configuration>
						<goals>
							<goal>wadl2java</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<excludes>
						<exclude>**/oasis/**</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on 
					the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.cxf</groupId>
										<artifactId>cxf-wadl2java-plugin</artifactId>
										<versionRange>[${cxf.version},)</versionRange>
										<goals>
											<goal>wadl2java</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>